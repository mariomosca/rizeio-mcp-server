  "version": "1.0.0",
  "description": "MCP server for Rize.io productivity tracking integration",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "rize-mcp-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
